generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String      @id @default(cuid())
  username String      @unique
  items    OrderItem[]
}

model OrderItem {
  id       String @id @default(cuid())
  label    String
  position Float
  user     User   @relation(fields: [userId], references: [id])
  userId   String
  color    String
}
